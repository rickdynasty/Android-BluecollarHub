<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bluecollar.hub">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.bc">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".apidemos.ApiDemos"></activity>
        <activity
            android:name=".apidemos.widget.BcEditTextActivity"
            android:hardwareAccelerated="false"
            android:label="@string/activity_label_BcEditTextActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="com.bluecollar.hub.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>
    </application>

</manifest>