<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.bc" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bcEditTextStyle">@style/Widget.bc.EditText.BcEditTextStyle</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity.bc</item>
    </style>

    <style name="Animation.Activity.bc" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
    </style>

    <style name="Theme.bc.immersiveStatusbar">
        <item name="immersivemode">true</item>
    </style>

    <style name="Widget.bc.EditText" parent="@android:style/Widget.Holo.EditText">
        <item name="android:background">?android:attr/editTextBackground</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColorHighlight">@color/highlighted_text_holo_light</item>
    </style>

    <style name="Widget.bc.EditText.BcEditTextStyle">
        <item name="showClear">true</item>
        <item name="isWhiteBackground">true</item>
    </style>

    <style name="Widget.bc.ToolbarBase" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="title_text_size">18dp</item>
        <item name="sub_title_text_size">13dp</item>
        <item name="menu_text_size">16sp</item>
        <item name="enable_under_divider">true</item>
        <item name="under_divider_color">#E0E0E0</item>
        <item name="under_divider_height">1px</item>
    </style>

    <style name="WhiteFontToolbar" parent="Widget.bc.ToolbarBase">
        <item name="title_text_color">#ffffff</item>
        <item name="android:background">#27A5F9</item>
        <item name="sub_title_text_color">#b2ffffff</item>
        <item name="menu_text_color">#ffffff</item>
        <item name="back_icon">@mipmap/ic_back_white</item>
    </style>
</resources>
